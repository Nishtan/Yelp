<% layout("layouts/boilerplate.ejs") %>
<div id="cluster-map"></div>    
<h1>All Campgrouds</h1>
    <% for(let i of campgrounds){ %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if(i.images.length){ %> 
                    <img class="img-fluid" alt="" src="<%=i.images[0].url %>">
                <% } else {  %>
                    <img class="img-fluid" alt="" src="https://res.cloudinary.com/djhcnbsvg/image/upload/v1635580313/YelpCamp/kvecrsvzti2ib9uuxqay.jpg">
                    <% } %>  
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= i.title %>
                        </h5>
                        <p class="card-text">
                            <%= i.description %>
                        </p>
                        <small class="text-danger">
                            <%= i.location %>
                        </small>
                        <a href="/campgrounds/<%= i._id %> " class="btn btn-primary">Show</a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
        <script>
             const mapToken="<%- process.env.MAPBOX_TOKEN %>"
             const  campgrounds = {features: JSON.parse('<%-JSON.stringify(campgrounds)%>')};
        </script>
        <script src="/javascripts/clusterMap.js"></script>